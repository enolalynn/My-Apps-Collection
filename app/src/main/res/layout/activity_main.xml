<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/lyTop"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            android:layout_width="0dp"
            android:onClick="cardItemClicked"
            android:id="@+id/cvDice"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imgDice"
                    android:padding="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/dice"/>
                <TextView
                    android:id="@+id/tv_dice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#424769"
                    android:textStyle="bold"
                    android:text="Dice Roller"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="cardItemClicked"
            android:id="@+id/cvLogIn"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:padding="30dp"
                    android:id="@+id/img_login"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/password"/>
                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="Log In"
                    android:textColor="#424769"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyMiddle"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@+id/lyTop"
        >
        <androidx.cardview.widget.CardView
            android:onClick="cardItemClicked"
            android:id="@+id/cvGuessWord"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:padding="30dp"
                    android:id="@+id/imgGuessWord"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/question"/>
                <TextView
                    android:id="@+id/tv_Guess_Word"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#424769"
                    android:textStyle="bold"
                    android:text="Guess Word"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="cardItemClicked"
            android:id="@+id/cvFontConverter"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:padding="30dp"
                    android:id="@+id/imgConverter"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/convert"/>
                <TextView
                    android:id="@+id/tv_converter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="Font Converter"
                    android:textColor="#424769"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyBottom"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@+id/lyMiddle"
        >
        <androidx.cardview.widget.CardView
            android:onClick="cardItemClicked"
            android:id="@+id/cvDateCounter"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:padding="30dp"
                    android:id="@+id/imgDateCounter"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/love"/>
                <TextView
                    android:id="@+id/tv_male"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#424769"
                    android:textStyle="bold"
                    android:text="Date Counter"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:onClick="cardItemClicked"
            android:id="@+id/cvCalculator"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:padding="30dp"
                    android:id="@+id/ic_female"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/calculator"/>
                <TextView
                    android:id="@+id/tv_female"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="Calculator"
                    android:textColor="#424769"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>